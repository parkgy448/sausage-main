<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>관리자 페이지 | SSS CASINO</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        :root {
            --color-bg: #020617;
            --color-bg-light: #0f172a;
            --color-bg-lighter: #1e293b;
            --color-border: #334155;
            --color-text: #f9fafb;
            --color-text-dim: #9ca3af;
            --color-primary: #f97316;
            --color-accent: #6366f1;
            --color-approve: #10b981;
            --color-reject: #ef4444;
        }
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
            background-color: var(--color-bg);
            color: var(--color-text);
        }
        .admin-tab.active {
            background-color: var(--color-primary);
            color: var(--color-text);
            border-bottom-color: var(--color-primary);
        }
        .admin-tab {
            border-bottom: 2px solid transparent;
        }
        .tab-content { display: none; }
        .tab-content.active { display: block; }
        .stat-card {
            background: linear-gradient(145deg, var(--color-bg-light), var(--color-bg));
            border: 1px solid var(--color-border);
        }
        .admin-action-btn {
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 11px;
            margin: 2px;
            border: none;
            cursor: pointer;
            transition: all 0.2s ease;
            background-color: var(--color-border);
        }
        .admin-action-btn:hover { filter: brightness(1.2); }
        .admin-action-btn.info { background-color: var(--color-accent); }
        .admin-action-btn.approve { background-color: var(--color-approve); }
        .admin-action-btn.reject { background-color: var(--color-reject); }
        
        #userTableBody input, #userTableBody select, .styled-input, .styled-textarea {
             background-color: var(--color-bg-light);
             padding: 6px 8px;
             border-radius: 6px;
             border: 1px solid var(--color-border);
             font-size: 13px;
        }
        #userTableBody input:focus, #userTableBody select:focus, .styled-input:focus, .styled-textarea:focus {
            outline: none;
            border-color: var(--color-primary);
            box-shadow: 0 0 0 2px rgba(249, 115, 22, 0.5);
        }
        .primary-btn {
            background: linear-gradient(90deg, var(--color-accent), #ec4899);
            color: var(--color-text);
            font-weight: 600;
            cursor: pointer;
            padding: 10px;
            border-radius: 999px;
            border: none;
        }
        .overlay-screen {
            position: fixed;
            inset: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(2, 6, 23, 0.9);
            backdrop-filter: blur(4px);
            z-index: 100;
        }
    </style>
</head>
<body class="min-h-screen">

    <div id="adminPanel" class="container mx-auto px-4 py-6 hidden">
        <!-- Header -->
        <header class="flex justify-between items-center mb-6">
            <div>
                <h1 class="text-2xl font-bold text-orange-400">SSS CASINO Admin</h1>
                <div id="adminEmail" class="text-sm text-gray-400"></div>
            </div>
            <a href="index.html" class="text-gray-400 hover:text-white border border-gray-600 rounded-full px-4 py-2 text-sm">메인으로</a>
        </header>

        <!-- 탭 메뉴 -->
        <div class="flex overflow-x-auto border-b border-gray-700 mb-6">
            <button class="admin-tab active px-5 py-3 font-bold whitespace-nowrap" data-tab="users">회원 관리</button>
            <button class="admin-tab px-5 py-3 font-bold whitespace-nowrap" data-tab="approvals">가입 승인</button>
            <button class="admin-tab px-5 py-3 font-bold whitespace-nowrap" data-tab="messages">쪽지 관리</button>
            <button class="admin-tab px-5 py-3 font-bold whitespace-nowrap" data-tab="deposits">충전 관리</button>
            <button class="admin-tab px-5 py-3 font-bold whitespace-nowrap" data-tab="exchanges">환전 관리</button>
        </div>

        <!-- Users Tab -->
        <div id="usersTab" class="tab-content active">
            <div class="mb-4">
                <input type="text" id="userSearch" placeholder="닉네임 또는 이메일로 검색..." class="w-full max-w-sm styled-input">
            </div>
            <div class="bg-slate-800/50 rounded-lg overflow-hidden border border-slate-700">
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead class="bg-slate-700/50">
                            <tr>
                                <th class="p-3 text-left text-sm font-semibold">닉네임/이메일</th>
                                <th class="p-3 text-left text-sm font-semibold">보유머니</th>
                                <th class="p-3 text-left text-sm font-semibold">포인트</th>
                                <th class="p-3 text-left text-sm font-semibold">가입일</th>
                                <th class="p-3 text-left text-sm font-semibold">역할/상태</th>
                                <th class="p-3 text-left text-sm font-semibold">관리</th>
                            </tr>
                        </thead>
                        <tbody id="userTableBody" class="divide-y divide-slate-700"></tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Approvals Tab -->
        <div id="approvalsTab" class="tab-content">
             <div class="bg-slate-800/50 rounded-lg overflow-hidden border border-slate-700">
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead class="bg-slate-700/50">
                            <tr>
                                <th class="p-3 text-left text-sm font-semibold">신청자 (닉네임/이메일)</th>
                                <th class="p-3 text-left text-sm font-semibold">가입일</th>
                                <th class="p-3 text-left text-sm font-semibold">관리</th>
                            </tr>
                        </thead>
                        <tbody id="approvalsTableBody" class="divide-y divide-slate-700"></tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Messages Tab -->
        <div id="messagesTab" class="tab-content">
             <div class="bg-slate-800/50 rounded-lg p-6 border border-slate-700 max-w-2xl mx-auto">
                <h3 class="font-bold mb-4 text-orange-400 text-lg">전체 사용자에게 쪽지 보내기</h3>
                <div class="space-y-4">
                    <div>
                        <label class="block text-sm text-gray-400 mb-1">쪽지 제목</label>
                        <input type="text" id="messageTitle" class="w-full styled-input" placeholder="중요 공지사항">
                    </div>
                    <div>
                        <label class="block text-sm text-gray-400 mb-1">쪽지 내용</label>
                        <textarea id="messageContent" class="w-full styled-textarea" rows="5" placeholder="내용을 입력하세요..."></textarea>
                    </div>
                    <button id="sendMessageBtn" class="w-full primary-btn !rounded-md !py-2.5">
                        전체 발송
                    </button>
                </div>
            </div>
        </div>
        
        <!-- Deposits Tab -->
        <div id="depositsTab" class="tab-content">
             <div class="bg-slate-800/50 rounded-lg overflow-hidden border border-slate-700">
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead class="bg-slate-700/50">
                            <tr>
                                <th class="p-3 text-left text-sm font-semibold">신청자 (닉네임)</th>
                                <th class="p-3 text-left text-sm font-semibold">신청금액</th>
                                <th class="p-3 text-left text-sm font-semibold">신청일</th>
                                <th class="p-3 text-left text-sm font-semibold">관리</th>
                            </tr>
                        </thead>
                        <tbody id="depositTableBody" class="divide-y divide-slate-700"></tbody>
                    </table>
                </div>
            </div>
        </div>
        
        <!-- Exchanges Tab -->
        <div id="exchangesTab" class="tab-content">
             <div class="bg-slate-800/50 rounded-lg overflow-hidden border border-slate-700">
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead class="bg-slate-700/50">
                            <tr>
                                <th class="p-3 text-left text-sm font-semibold">신청자 (닉네임)</th>
                                <th class="p-3 text-left text-sm font-semibold">신청금액</th>
                                <th class="p-3 text-left text-sm font-semibold">은행/계좌/예금주</th>
                                <th class="p-3 text-left text-sm font-semibold">신청일</th>
                                <th class="p-3 text-left text-sm font-semibold">관리</th>
                            </tr>
                        </thead>
                        <tbody id="exchangeTableBody" class="divide-y divide-slate-700"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
    <div id="accessDenied" class="overlay-screen">
        <div class="text-center p-4">
            <h2 class="text-2xl font-bold text-red-500">액세스 거부됨</h2>
            <p class="text-gray-400 mt-2">관리자만 이 페이지에 접근할 수 있습니다. 5초 후 메인 페이지로 이동합니다.</p>
        </div>
    </div>

    <div id="loadingIndicator" class="overlay-screen hidden">
         <div class="text-center">
            <svg class="animate-spin h-8 w-8 text-orange-500 mx-auto" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>
            <h2 class="text-xl font-bold text-orange-500 mt-4">처리 중...</h2>
        </div>
    </div>

    <script type="module">
        import { auth, db } from "./js/firebase-config.js";
        import { listenAuth, fetchCurrentUserProfile } from "./js/auth-utils.js";
        import { collection, getDocs, doc, updateDoc, deleteDoc, writeBatch, serverTimestamp, query, where, orderBy, runTransaction } from "https://www.gstatic.com/firebasejs/10.13.0/firebase-firestore.js";

        const adminPanel = document.getElementById('adminPanel');
        const accessDenied = document.getElementById('accessDenied');
        const loadingIndicator = document.getElementById('loadingIndicator');
        const adminEmailEl = document.getElementById('adminEmail');
        
        let allUsersCache = new Map();
        let pendingUsersCache = [];

        // --- 초기화 및 인증 ---
        listenAuth(async (user) => {
            if (user) {
                const profile = await fetchCurrentUserProfile(user.uid);
                if (profile && profile.role === 'admin') {
                    initializeAdminPanel(user, profile);
                } else {
                    showAccessDenied();
                }
            } else {
                showAccessDenied();
            }
        });

        function showAccessDenied() {
            adminPanel.classList.add('hidden');
            accessDenied.classList.remove('hidden');
            setTimeout(() => { window.location.href = 'index.html'; }, 3000);
        }

        async function initializeAdminPanel(user, profile) {
            loadingIndicator.classList.remove('hidden');
            adminEmailEl.textContent = user.email;
            
            await loadAllUsers();
            
            setupTabs();
            setupUserManagement();
            setupApprovalManagement();
            setupMessageManagement();
            setupDepositManagement();
            setupExchangeManagement();
            
            document.querySelector('.admin-tab[data-tab="users"]').click();
            
            adminPanel.classList.remove('hidden');
            loadingIndicator.classList.add('hidden');
        }

        async function loadAllUsers() {
            try {
                const usersSnapshot = await getDocs(collection(db, "users"));
                allUsersCache.clear();
                usersSnapshot.docs.forEach(doc => {
                    allUsersCache.set(doc.id, { id: doc.id, ...doc.data() });
                });
            } catch (error) {
                console.error("Error loading users:", error);
                alert('사용자 목록을 불러오는 데 실패했습니다. Firestore 보안 규칙을 확인하세요.');
            }
        }
        
        function setupTabs() {
            document.querySelectorAll('.admin-tab').forEach(tab => {
                tab.addEventListener('click', async function() {
                    if(this.disabled) return;
                    
                    document.querySelectorAll('.admin-tab').forEach(t => t.classList.remove('active'));
                    document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));

                    this.classList.add('active');
                    const tabName = this.dataset.tab;
                    document.getElementById(tabName + 'Tab').classList.add('active');
                    
                    switch(tabName) {
                        case 'users': renderUserTable(); break;
                        case 'approvals': 
                            await loadPendingUsers();
                            renderApprovalsTable(); 
                            break;
                        case 'deposits': 
                            await loadDepositRequests();
                            renderDepositTable(); 
                            break;
                        case 'exchanges': 
                            await loadExchangeRequests();
                            renderExchangeTable(); 
                            break;
                    }
                });
            });
        }
        
        // --- 회원 관리 (Users) ---
        function setupUserManagement() {
            const userSearch = document.getElementById('userSearch');
            const userTableBody = document.getElementById('userTableBody');

            userSearch.addEventListener('input', () => renderUserTable());

            userTableBody.addEventListener('change', async (e) => {
                const target = e.target;
                const id = target.dataset.id;
                if (!id || !target.dataset.field) return;

                const field = target.dataset.field;
                let value = target.type === 'number' ? Number(target.value) : target.value;

                if (target.type === 'number' && (isNaN(value) || value < 0)) {
                    alert('유효한 숫자를 입력하세요.');
                    target.value = allUsersCache.get(id)[field];
                    return;
                }
                
                loadingIndicator.classList.remove('hidden');
                try {
                    await updateDoc(doc(db, "users", id), { [field]: value });
                    allUsersCache.get(id)[field] = value;
                } catch (error) {
                    console.error(`Error updating user ${field}:`, error);
                    alert('업데이트 실패');
                } finally {
                    loadingIndicator.classList.add('hidden');
                }
            });

            userTableBody.addEventListener('click', async (e) => {
                if (e.target.classList.contains('delete')) {
                    const id = e.target.dataset.id;
                    const nickname = e.target.dataset.nickname;
                    if (confirm(`'${nickname}' 사용자를 삭제하시겠습니까? 이 작업은 되돌릴 수 없습니다.`)) {
                        loadingIndicator.classList.remove('hidden');
                        try {
                            await deleteDoc(doc(db, "users", id));
                            allUsersCache.delete(id);
                            renderUserTable();
                            alert('사용자가 삭제되었습니다.');
                        } catch (error) {
                            console.error("Error deleting user:", error);
                            alert('사용자 삭제 실패');
                        } finally {
                            loadingIndicator.classList.add('hidden');
                        }
                    }
                }
            });
        }
        
        function renderUserTable() {
            const userTableBody = document.getElementById('userTableBody');
            userTableBody.innerHTML = "";
            const searchTerm = document.getElementById('userSearch').value.toLowerCase();

            const usersToRender = Array.from(allUsersCache.values()).filter(user => {
                const nickname = user.nickname?.toLowerCase() || '';
                const email = user.email?.toLowerCase() || '';
                return nickname.includes(searchTerm) || email.includes(searchTerm);
            });
            
            if (usersToRender.length === 0) {
                userTableBody.innerHTML = `<tr><td colspan="6" class="text-center p-5 text-gray-500">표시할 사용자가 없습니다.</td></tr>`;
                return;
            }

            usersToRender.forEach(user => {
                const tr = document.createElement('tr');
                const joinDate = user.createdAt?.toDate?.().toLocaleDateString() || '알 수 없음';
                tr.innerHTML = `
                    <td class="p-3"><div class="font-medium">${user.nickname || 'N/A'}</div><div class="text-xs text-gray-400">${user.email}</div></td>
                    <td class="p-3"><input type="number" value="${user.money || 0}" data-id="${user.id}" data-field="money" class="w-28"> 원</td>
                    <td class="p-3"><input type="number" value="${user.point || 0}" data-id="${user.id}" data-field="point" class="w-24"> P</td>
                    <td class="p-3 text-sm">${joinDate}</td>
                    <td class="p-3">
                        <select data-id="${user.id}" data-field="role" class="w-24 mb-1"><option value="user" ${user.role === 'user' ? 'selected' : ''}>User</option><option value="admin" ${user.role === 'admin' ? 'selected' : ''}>Admin</option></select>
                        <select data-id="${user.id}" data-field="status" class="w-24"><option value="active" ${user.status === 'active' ? 'selected' : ''}>Active</option><option value="pending" ${user.status === 'pending' ? 'selected' : ''}>Pending</option></select>
                    </td>
                    <td class="p-3"><button class="admin-action-btn reject delete" data-id="${user.id}" data-nickname="${user.nickname}">삭제</button></td>
                `;
                userTableBody.appendChild(tr);
            });
        }
        
        // --- 가입 승인 (Approvals) ---
        async function loadPendingUsers() {
            const q = query(collection(db, "users"), where("status", "==", "pending"));
            const snapshot = await getDocs(q);
            pendingUsersCache = snapshot.docs.map(d => ({id: d.id, ...d.data()}));
        }

        function renderApprovalsTable() {
            const tableBody = document.getElementById('approvalsTableBody');
            tableBody.innerHTML = '';
            if (pendingUsersCache.length === 0) {
                tableBody.innerHTML = `<tr><td colspan="3" class="text-center p-5 text-gray-500">승인 대기 중인 사용자가 없습니다.</td></tr>`;
                return;
            }
            pendingUsersCache.forEach(user => {
                const joinDate = user.createdAt?.toDate?.().toLocaleDateString() || '알 수 없음';
                const tr = document.createElement('tr');
                tr.innerHTML = `
                    <td class="p-3"><div class="font-medium">${user.nickname || 'N/A'}</div><div class="text-xs text-gray-400">${user.email}</div></td>
                    <td class="p-3 text-sm">${joinDate}</td>
                    <td class="p-3">
                        <button class="admin-action-btn approve" data-id="${user.id}">승인</button>
                        <button class="admin-action-btn reject" data-id="${user.id}">거절</button>
                    </td>
                `;
                tableBody.appendChild(tr);
            });
        }

        function setupApprovalManagement() {
            document.getElementById('approvalsTableBody').addEventListener('click', async e => {
                const button = e.target;
                const userId = button.dataset.id;
                if (!userId) return;

                const isApprove = button.classList.contains('approve');
                const actionText = isApprove ? '승인' : '거절';
                
                if (!confirm(`이 사용자의 가입을 ${actionText}하시겠습니까?`)) return;

                loadingIndicator.classList.remove('hidden');
                try {
                    if (isApprove) {
                        await updateDoc(doc(db, "users", userId), { status: 'active' });
                        if(allUsersCache.has(userId)) allUsersCache.get(userId).status = 'active';
                    } else {
                        await deleteDoc(doc(db, "users", userId));
                        allUsersCache.delete(userId);
                    }
                    alert(`가입 요청이 ${actionText} 처리되었습니다.`);
                    await loadPendingUsers(); // Refresh pending list
                    renderApprovalsTable(); // Re-render table
                } catch(error) {
                    console.error(`가입 ${actionText} 오류:`, error);
                    alert(`처리 중 오류 발생: ${error}`);
                } finally {
                    loadingIndicator.classList.add('hidden');
                }
            });
        }


        // --- 쪽지 관리 (Messages) ---
        function setupMessageManagement() {
            document.getElementById('sendMessageBtn').addEventListener('click', async () => {
                const title = document.getElementById('messageTitle').value;
                const content = document.getElementById('messageContent').value;
                if (!title.trim() || !content.trim()) return alert('제목과 내용을 모두 입력해주세요.');
                if (!confirm('모든 사용자에게 이 쪽지를 발송하시겠습니까?')) return;

                loadingIndicator.classList.remove('hidden');
                try {
                    const batch = writeBatch(db);
                    const messageData = { title, content, read: false, timestamp: serverTimestamp() };
                    
                    allUsersCache.forEach(user => {
                        const messageRef = doc(collection(db, "userMessages", user.id, "messages"));
                        batch.set(messageRef, messageData);
                    });
                    
                    await batch.commit();
                    alert(`${allUsersCache.size}명의 모든 사용자에게 쪽지를 성공적으로 발송했습니다.`);
                    document.getElementById('messageTitle').value = '';
                    document.getElementById('messageContent').value = '';
                } catch (error) {
                    console.error("전체 쪽지 발송 오류: ", error);
                    alert(`쪽지 발송 중 오류가 발생했습니다: ${error.message}`);
                } finally {
                    loadingIndicator.classList.add('hidden');
                }
            });
        }
        
        // --- 충전 관리 (Deposits) ---
        let depositRequestsCache = [];
        async function loadDepositRequests() {
            const q = query(collection(db, "depositRequests"), where("status", "==", "pending"), orderBy("timestamp", "desc"));
            const snapshot = await getDocs(q);
            depositRequestsCache = snapshot.docs.map(d => ({id: d.id, ...d.data()}));
        }
        
        function renderDepositTable() {
            const tableBody = document.getElementById('depositTableBody');
            tableBody.innerHTML = '';
            if (depositRequestsCache.length === 0) {
                tableBody.innerHTML = `<tr><td colspan="4" class="text-center p-5 text-gray-500">대기 중인 충전 요청이 없습니다.</td></tr>`;
                return;
            }
            depositRequestsCache.forEach(req => {
                const user = allUsersCache.get(req.userId);
                const nickname = user ? user.nickname : '알 수 없음';
                const date = req.timestamp?.toDate?.().toLocaleString('ko-KR') || '알 수 없음';
                const tr = document.createElement('tr');
                tr.innerHTML = `
                    <td class="p-3">${nickname} (${req.depositorName})</td>
                    <td class="p-3 font-mono">${(req.amount || 0).toLocaleString()} 원</td>
                    <td class="p-3 text-sm">${date}</td>
                    <td class="p-3">
                        <button class="admin-action-btn approve" data-id="${req.id}">승인</button>
                        <button class="admin-action-btn reject" data-id="${req.id}">거절</button>
                    </td>
                `;
                tableBody.appendChild(tr);
            });
        }
        
        function setupDepositManagement() {
            document.getElementById('depositTableBody').addEventListener('click', async e => {
                const button = e.target;
                const reqId = button.dataset.id;
                if (!reqId) return;

                const req = depositRequestsCache.find(r => r.id === reqId);
                if (!req) return;
                
                const isApprove = button.classList.contains('approve');
                const actionText = isApprove ? '승인' : '거절';
                
                if (!confirm(`${(req.amount || 0).toLocaleString()}원 충전 요청을 ${actionText}하시겠습니까?`)) return;

                loadingIndicator.classList.remove('hidden');
                const reqRef = doc(db, "depositRequests", reqId);
                try {
                    if (isApprove) {
                        const userRef = doc(db, "users", req.userId);
                        await runTransaction(db, async (transaction) => {
                            const userDoc = await transaction.get(userRef);
                            if (!userDoc.exists()) throw "사용자를 찾을 수 없습니다.";
                            const newMoney = (userDoc.data().money || 0) + req.amount;
                            transaction.update(userRef, { money: newMoney });
                            transaction.update(reqRef, { status: 'approved' });
                        });
                    } else {
                        await updateDoc(reqRef, { status: 'rejected' });
                    }
                    alert(`요청이 ${actionText} 처리되었습니다.`);
                    await loadDepositRequests();
                    renderDepositTable();
                } catch(error) {
                    console.error(`충전 ${actionText} 오류:`, error);
                    alert(`처리 중 오류 발생: ${error}`);
                } finally {
                    loadingIndicator.classList.add('hidden');
                }
            });
        }
        
        // --- 환전 관리 (Exchanges) ---
        let exchangeRequestsCache = [];
        async function loadExchangeRequests() {
            const q = query(collection(db, "exchangeRequests"), where("status", "==", "pending"), orderBy("timestamp", "desc"));
            const snapshot = await getDocs(q);
            exchangeRequestsCache = snapshot.docs.map(d => ({id: d.id, ...d.data()}));
        }
        
        function renderExchangeTable() {
            const tableBody = document.getElementById('exchangeTableBody');
            tableBody.innerHTML = '';
             if (exchangeRequestsCache.length === 0) {
                tableBody.innerHTML = `<tr><td colspan="5" class="text-center p-5 text-gray-500">대기 중인 환전 요청이 없습니다.</td></tr>`;
                return;
            }
            exchangeRequestsCache.forEach(req => {
                const user = allUsersCache.get(req.userId);
                const nickname = user ? user.nickname : '알 수 없음';
                const date = req.timestamp?.toDate?.().toLocaleString('ko-KR') || '알 수 없음';
                const accountInfo = `${user.bank || ''} ${user.accountNumber || ''} (${user.accountHolder || ''})`;
                const tr = document.createElement('tr');
                tr.innerHTML = `
                    <td class="p-3">${nickname}</td>
                    <td class="p-3 font-mono">${(req.amount || 0).toLocaleString()} 원</td>
                    <td class="p-3 text-sm">${accountInfo}</td>
                    <td class="p-3 text-sm">${date}</td>
                    <td class="p-3">
                        <button class="admin-action-btn approve" data-id="${req.id}">완료</button>
                        <button class="admin-action-btn reject" data-id="${req.id}">거절</button>
                    </td>
                `;
                tableBody.appendChild(tr);
            });
        }
        
        function setupExchangeManagement() {
             document.getElementById('exchangeTableBody').addEventListener('click', async e => {
                const button = e.target;
                const reqId = button.dataset.id;
                if (!reqId) return;

                const req = exchangeRequestsCache.find(r => r.id === reqId);
                if (!req) return;
                
                const isApprove = button.classList.contains('approve');
                const actionText = isApprove ? '완료' : '거절';
                
                if (!confirm(`${(req.amount || 0).toLocaleString()}원 환전 요청을 ${actionText} 처리하시겠습니까?`)) return;

                loadingIndicator.classList.remove('hidden');
                const reqRef = doc(db, "exchangeRequests", reqId);
                try {
                    if (isApprove) {
                         await updateDoc(reqRef, { status: 'completed' });
                    } else {
                        // 거절 시 금액 복구
                        const userRef = doc(db, "users", req.userId);
                        await runTransaction(db, async (transaction) => {
                            const userDoc = await transaction.get(userRef);
                            if (!userDoc.exists()) throw "사용자를 찾을 수 없습니다.";
                            const newMoney = (userDoc.data().money || 0) + req.amount;
                            transaction.update(userRef, { money: newMoney });
                            transaction.update(reqRef, { status: 'rejected' });
                        });
                    }
                    alert(`요청이 ${actionText} 처리되었습니다.`);
                    await loadExchangeRequests();
                    renderExchangeTable();
                } catch(error) {
                    console.error(`환전 ${actionText} 오류:`, error);
                    alert(`처리 중 오류 발생: ${error}`);
                } finally {
                    loadingIndicator.classList.add('hidden');
                }
            });
        }

    </script>
</body>
